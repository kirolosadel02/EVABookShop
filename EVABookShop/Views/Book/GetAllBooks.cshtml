@model List<EVABookShop.Models.BookViewModel>
@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<div class="mb-3">
    <a asp-action="CreateBook" class="btn btn-primary">Create New Book</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.OrderBy(b => b.Title))
                {
                    <tr>
                        <td>
                            <strong>@book.Title</strong>
                            @if (!string.IsNullOrEmpty(book.Description))
                            {
                                <br />
                                <small class="text-muted">@(book.Description.Length > 50 ? book.Description.Substring(0, 50) + " ...read more" : book.Description)</small>
                            }
                        </td>
                        <td>@book.Author</td>
                        <td>
                            @if (!string.IsNullOrEmpty(book.CategoryName))
                            {
                                <span class="badge bg-info">@book.CategoryName</span>
                            }
                            else
                            {
                                <span class="text-muted">No Category</span>
                            }
                        </td>
                        <td>
                            <span class="fw-bold text-success">$@book.Price.ToString("F2")</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="DetailsBook" asp-route-id="@book.Id" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Update
                                </a>
                                <a asp-action="DeleteBook" asp-route-id="@book.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this book?')">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <p class="text-muted">
            <small>Showing @Model.Count book(s)</small>
        </p>
    </div>
}
else
{
    <div class="alert alert-info">
        <h5 class="alert-heading">No Books Found</h5>
        <p>There are no books in the system yet. <a asp-action="CreateBook" class="alert-link">Create the first book now</a>.</p>
    </div>
} 
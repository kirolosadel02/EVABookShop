@model EVABookShop.Models.BookViewModel
@{
    ViewData["Title"] = "Edit Book";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Edit Book</h2>
                </div>
                <div class="card-body">
                    <form asp-action="EditBook" asp-route-id="@Model.Id" method="post" id="editBookForm" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <!-- Display validation summary for model-level errors -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" id="validationSummary"></div>

                        <!-- Success/Error messages -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Title" class="form-label">Book Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Enter book title" maxlength="200" data-original-value="@Model.Title" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                    <div class="form-text">Book title must be 2-200 characters long.</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Author" class="form-label">Author</label>
                                    <input asp-for="Author" class="form-control" placeholder="Enter author name" maxlength="100" data-original-value="@Model.Author" />
                                    <span asp-validation-for="Author" class="text-danger"></span>
                                    <div class="form-text">Author name must be 2-100 characters long.</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CategoryId" class="form-label">Category</label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "CatName"))" data-original-value="@Model.CategoryId">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    <div class="form-text">Please select a category for this book.</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="form-label">Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="1" max="1000" placeholder="1.00" data-original-value="@Model.Price" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                    <div class="form-text">Price must be between $1.00 and $1,000.00.</div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter book description" maxlength="1000" data-original-value="@Model.Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Description is optional and cannot exceed 1000 characters.</div>
                        </div>

                        <div class="form-group d-flex gap-2">
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <span class="spinner-border spinner-border-sm d-none" id="loadingSpinner"></span>
                                Update Book
                            </button>
                            <a asp-action="GetAllBooks" class="btn btn-secondary">Back to List</a>
                            <button type="button" class="btn btn-warning" id="resetBtn">Reset Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            var originalTitle = $("#Title").data("original-value");
            var originalAuthor = $("#Author").data("original-value");
            var originalCategoryId = $("#CategoryId").data("original-value");
            var originalPrice = parseFloat($("#Price").data("original-value"));
            var originalDescription = $("#Description").data("original-value");
            var hasChanges = false;

            // Custom validation rules
            $.validator.addMethod("booktitle", function(value, element) {
                return this.optional(element) || /^[a-zA-Z0-9\s\-_.,!?'"()]+$/.test(value);
            }, "Book title can only contain letters, numbers, spaces, and common punctuation marks.");

            $.validator.addMethod("authorname", function(value, element) {
                return this.optional(element) || /^[a-zA-Z\s\-'.,]+$/.test(value);
            }, "Author name can only contain letters, spaces, hyphens, apostrophes, and periods.");

            // Configure validation
            $("#editBookForm").validate({
                rules: {
                    Title: {
                        required: true,
                        minlength: 2,
                        maxlength: 200,
                        booktitle: true
                    },
                    Author: {
                        required: true,
                        minlength: 2,
                        maxlength: 100,
                        authorname: true
                    },
                    CategoryId: {
                        required: true
                    },
                    Price: {
                        required: true,
                        min: 1,
                        max: 1000,
                        number: true
                    },
                    Description: {
                        maxlength: 1000
                    }
                },
                messages: {
                    Title: {
                        required: "Book title is required.",
                        minlength: "Book title must be at least 2 characters long.",
                        maxlength: "Book title cannot exceed 200 characters.",
                        booktitle: "Book title can only contain letters, numbers, spaces, and common punctuation marks."
                    },
                    Author: {
                        required: "Author name is required.",
                        minlength: "Author name must be at least 2 characters long.",
                        maxlength: "Author name cannot exceed 100 characters.",
                        authorname: "Author name can only contain letters, spaces, hyphens, apostrophes, and periods."
                    },
                    CategoryId: {
                        required: "Please select a category."
                    },
                    Price: {
                        required: "Price is required.",
                        min: "Price must be at least $1.00.",
                        max: "Price cannot exceed $1,000.00.",
                        number: "Price must be a valid number."
                    },
                    Description: {
                        maxlength: "Description cannot exceed 1000 characters."
                    }
                },
                errorClass: "text-danger",
                validClass: "is-valid",
                errorElement: "span",
                highlight: function(element) {
                    $(element).addClass("is-invalid").removeClass("is-valid");
                },
                unhighlight: function(element) {
                    $(element).removeClass("is-invalid").addClass("is-valid");
                },
                submitHandler: function(form) {
                    // Check if there are any changes
                    var currentTitle = $("#Title").val().trim();
                    var currentAuthor = $("#Author").val().trim();
                    var currentCategoryId = parseInt($("#CategoryId").val()) || 0;
                    var currentPrice = parseFloat($("#Price").val()) || 0;
                    var currentDescription = $("#Description").val().trim();

                    if (currentTitle === originalTitle && 
                        currentAuthor === originalAuthor && 
                        currentCategoryId === originalCategoryId && 
                        currentPrice === originalPrice && 
                        currentDescription === originalDescription) {
                        alert("No changes detected. Please make changes before updating.");
                        return false;
                    }

                    // Show loading state
                    $("#submitBtn").prop("disabled", true);
                    $("#loadingSpinner").removeClass("d-none");

                    // Submit the form
                    form.submit();
                }
            });

            // Track changes
            function checkForChanges() {
                var currentTitle = $("#Title").val().trim();
                var currentAuthor = $("#Author").val().trim();
                var currentCategoryId = parseInt($("#CategoryId").val()) || 0;
                var currentPrice = parseFloat($("#Price").val()) || 0;
                var currentDescription = $("#Description").val().trim();

                hasChanges = (currentTitle !== originalTitle) || 
                           (currentAuthor !== originalAuthor) || 
                           (currentCategoryId !== originalCategoryId) || 
                           (currentPrice !== originalPrice) || 
                           (currentDescription !== originalDescription);
                
                $("#resetBtn").prop("disabled", !hasChanges);
            }

            // Real-time validation feedback and change tracking
            $("#Title").on("input", function() {
                var value = $(this).val().trim();
                if (value.length > 0) {
                    $(this).valid(); // Trigger validation
                }
                checkForChanges();
            });

            $("#Author").on("input", function() {
                var value = $(this).val().trim();
                if (value.length > 0) {
                    $(this).valid(); // Trigger validation
                }
                checkForChanges();
            });

            $("#CategoryId").on("change", function() {
                $(this).valid(); // Trigger validation
                checkForChanges();
            });

            $("#Price").on("input", function() {
                var value = $(this).val();
                if (value.length > 0) {
                    $(this).valid(); // Trigger validation
                }
                checkForChanges();
            });

            $("#Description").on("input", function() {
                var value = $(this).val().trim();
                if (value.length > 0) {
                    $(this).valid(); // Trigger validation
                }
                checkForChanges();
            });

            // Trim whitespace on blur
            $("#Title, #Author, #Description").on("blur", function() {
                $(this).val($(this).val().trim());
                checkForChanges();
            });

            // Format price input
            $("#Price").on("blur", function() {
                var value = parseFloat($(this).val());
                if (!isNaN(value)) {
                    $(this).val(value.toFixed(2));
                }
                checkForChanges();
            });

            // Reset button functionality
            $("#resetBtn").on("click", function() {
                if (confirm("Are you sure you want to reset all changes?")) {
                    $("#Title").val(originalTitle);
                    $("#Author").val(originalAuthor);
                    $("#CategoryId").val(originalCategoryId);
                    $("#Price").val(originalPrice.toFixed(2));
                    $("#Description").val(originalDescription);

                    // Clear validation states
                    $("#editBookForm").find(".is-invalid, .is-valid").removeClass("is-invalid is-valid");
                    $("#editBookForm").find(".text-danger").text("");

                    checkForChanges();
                }
            });

            // Warning before leaving page with unsaved changes
            window.addEventListener("beforeunload", function(e) {
                if (hasChanges) {
                    var confirmationMessage = "You have unsaved changes. Are you sure you want to leave?";
                    e.returnValue = confirmationMessage;
                    return confirmationMessage;
                }
            });

            // Remove warning when form is submitted
            $("#editBookForm").on("submit", function() {
                window.removeEventListener("beforeunload", arguments.callee);
            });

            // Initial state
            checkForChanges();
        });
    </script>
} 
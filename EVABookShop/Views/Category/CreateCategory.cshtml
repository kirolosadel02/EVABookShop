@model EVABookShop.Models.CategoryViewModel
@{
    ViewData["Title"] = "Create Category";
}
<h2>Create Category</h2>
<form asp-action="CreateCategory" method="post">
    <div class="form-group">
        <label asp-for="CatName"></label>
        <input asp-for="CatName" class="form-control" />
        <span asp-validation-for="CatName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CatOrder"></label>
        <input asp-for="CatOrder" class="form-control" />
        <span asp-validation-for="CatOrder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive">Is Active</label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="GetAllCategories" class="btn btn-secondary">Back to List</a>
</form> 
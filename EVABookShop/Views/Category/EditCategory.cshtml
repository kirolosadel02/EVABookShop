@model EVABookShop.Models.CategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<form asp-action="EditCategory" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="CatName" class="form-label"></label>
        <input asp-for="CatName" class="form-control" />
        <span asp-validation-for="CatName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CatOrder" class="form-label"></label>
        <input asp-for="CatOrder" class="form-control" type="number" />
        <span asp-validation-for="CatOrder" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="GetAllCategories" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
